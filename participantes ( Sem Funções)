participantes = []  # Lista para armazenar os dicion√°rios de participantes

while True:
    print("\n===== MENU DO EVENTO =====")
    print("1 - Cadastrar participante")
    print("2 - Listar participantes")
    print("3 - Buscar participante")
    print("4 - Remover participante")
    print("0 - Sair")

    opcao = input("Escolha uma op√ß√£o: ")

    # Cadastrar
    if opcao == "1":
        nome = input("Nome do participante: ")
        idade = int(input("Idade: "))
        email = input("Email: ")

        participante = {
            "nome": nome,
            "idade": idade,
            "email": email
        }

        participantes.append(participante)
        print(f"{nome} cadastrado com sucesso!")

    # Listar
    elif opcao == "2":
        if len(participantes) == 0:
            print("Nenhum participante registrado!")
        else:
            print("\nüìã Participantes cadastrados:")
            for p in participantes:
                print(f"- {p['nome']} | {p['idade']} anos | {p['email']}")

    # Buscar
    elif opcao == "3":
        busca_nome = input("Digite o nome para buscar: ").lower()
        encontrado = False

        for p in participantes:
            if p["nome"].lower() == busca_nome:
                print(f"\nEncontrado: {p['nome']} - {p['email']}")
                encontrado = True
                break

        if not encontrado:
            print("‚ùå Participante n√£o encontrado!")

    # Remover
    elif opcao == "4":
        remover_nome = input("Nome do participante a remover: ").lower()
        achou = False

        for p in participantes:
            if p["nome"].lower() == remover_nome:
                participantes.remove(p)
                print(f"{remover_nome} removido com sucesso!")
                achou = True
                break

        if not achou:
            print("‚ùå Participante n√£o estava na lista!")

    # Sair
    elif opcao == "0":
        print("Encerrando sistema...")
        break

    else:
        print("‚ö†Ô∏è Op√ß√£o inv√°lida, tente novamente!")